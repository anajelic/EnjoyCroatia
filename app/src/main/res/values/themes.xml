<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnjoyCroatia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint_blue</item>
        <item name="colorPrimaryVariant">@color/lavander</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/quick_silver_color</item>
        <item name="colorSecondaryVariant">@color/pale_silver_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style
        name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
    </style>


    <style name="CharcoalButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/charcoal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AppStandardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText" parent="AppStandardText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>